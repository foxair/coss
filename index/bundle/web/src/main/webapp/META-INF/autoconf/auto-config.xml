<?xml version="1.0" encoding="UTF-8"?>

<config description="自动配置：enniu">
	<group name="enniu.basic">
		<property name="enniu.basic.domain" defaultValue="51zhangdan.com" description="应用的域名" />
		<property name="enniu.basic.workdir" defaultValue="/home/admin" description="App 部署目录" />
		<property name="enniu.basic.output" defaultValue="${enniu.basic.workdir}/output" description="App 输出产物目录" />
		<property name="enniu.basic.mode" defaultValue="dev" description="应用的部署状态（run, test, dev）" />
	</group>

	<group name="enniu.deploy">
		<property name="enniu.basic.deploy" defaultValue="${enniu.basic.workdir}/deploy" description="App 布署目录" />
		<property name="enniu.basic.logs" defaultValue="${enniu.basic.output}/logs" description="App 日志输出目录" />
	</group>

	<group name="enniu.db">
		<property name="enniu.app.db.mysql.driver" defaultValue="com.alibaba.druid.proxy.DruidDriver" />
		<property name="enniu.app.db.mysql.jdbcUrl" defaultValue="jdbc:mysql://localhost:3306/demo?useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="enniu.app.db.mysql.username" defaultValue="root" />
		<property name="enniu.app.db.mysql.password" defaultValue="myroot" />
		<property name="enniu.app.db.pool.initialSize" defaultValue="1" />
		<property name="enniu.app.db.pool.minIdle" defaultValue="1" />
		<property name="enniu.app.db.pool.maxActive" defaultValue="20" />
		<property name="enniu.app.db.pool.maxWait" defaultValue="60000" />
		<property name="enniu.app.db.pool.poolPreparedStatements" defaultValue="true" />
		<property name="enniu.app.db.pool.filters" defaultValue="stat,slf4j" />
	</group>

	<group name="enniu.web">
		<property name="enniu.web.bundle" defaultValue="${enniu.basic.workdir}/bundle/web" description="App web home 主目录" />
		<property name="enniu.web.templates" defaultValue="${enniu.web.bundle}/src/main/webapp/WEB-INF/templates" description="App web home 模板目录" />
	</group>

	<script>
		<generate template="env.properties.vm" destfile="env.properties" charset="UTF-8" />
		<generate template="log4j.xml.vm" destfile="WEB-INF/log4j.xml" charset="UTF-8" />
		<generate template="web.xml.vm" destfile="WEB-INF/web.xml" charset="UTF-8" />
		<generate template="web-servlet.xml.vm" destfile="WEB-INF/web-servlet.xml" charset="UTF-8" />
	</script>
</config>
