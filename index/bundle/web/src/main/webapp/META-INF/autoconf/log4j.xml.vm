<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="PROJECT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${enniu_basic_logs}/webapp_stdout.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <param name="threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
    <appender name="PROJECT-DEBUG" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="${enniu_basic_logs}/enniu-debug.log"/>
        <param name="append" value="false"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<appender name="PROJECT-CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<!-- SQL enniu_basic_logs-->
    <appender name="PROJECT-SQL" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${enniu_basic_logs}/enniu-sql.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<!-- VELOCITY -->
	<appender name="VELOCITY" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${enniu_basic_logs}/enniu-velocity.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<!-- app logger -->
	<appender name="APP" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${enniu_basic_logs}/enniu-app.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
		</layout>
	</appender>
	
	<!-- logger -->
	<logger name="com.enniu.app" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="APP"/>
	</logger>
	
	<!-- druid.sql.ResultSet -->
	<logger name="druid.sql.Statement" additivity="false">
		#if("dev" == "${enniu_basic_mode}")
		<level value="DEBUG"/>
		#else
		<level value="WARN"/>
		#end
		<appender-ref ref="PROJECT-SQL"/>
		<appender-ref ref="PROJECT-CONSOLE"/>
	</logger>
	
	<logger name="com.enniu.app" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="PROJECT-CONSOLE"/>
	</logger>
	
	<root>
		#if("dev" == "${enniu_basic_mode}")
		<level value="DEBUG"/>
		#else
		<level value="WARN"/>
		#end
    	<appender-ref ref="PROJECT"/>
    	<appender-ref ref="PROJECT-DEBUG"/>
	</root>
</log4j:configuration>
